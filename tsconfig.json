{
   "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ES2020",
      "jsx": "react",
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noEmit": false,
      "noEmitOnError": false
   },
   "exclude": [
      "node_modules",
      "**/node_modules/*"
   ],
   "include": [
      "public/**/*"
   ]
}